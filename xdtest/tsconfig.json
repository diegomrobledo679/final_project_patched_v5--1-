
{
  "compilerOptions": {
    "target": "es2016",
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@/*": ["./src/*"],
      "@core/*": ["./src/core/*"]
    },
    "types": ["node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "tests"
  ]
}
